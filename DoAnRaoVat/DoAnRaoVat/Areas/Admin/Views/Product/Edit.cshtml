@model Model.EF.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index1.html">Trang chủ</a></li>
                    <li><i class="fa fa-users"></i>Quản lý loại danh mục</li>
                    <li>Cập nhật</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading"><h2><strong>Cập nhật thông tin loại danh mục</strong></h2></header>
                    <div class="panel-body">
                        <div class="form">
                            @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "form-group" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.Code, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên loại danh mục" })
                                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên danh mục" })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.Category_ID, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.DropDownListFor(model => model.Category_ID, null, new { @class = "form-control", @autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.Category_ID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.Status, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.CheckBoxFor(model => model.Status, new { @class = "checkbox form-control", @style = "width:20px;" })
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                        <a href="@Url.Action("Index","Product")" class="btn btn-success" type="button">Quay lại</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
