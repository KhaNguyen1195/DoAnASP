@model Model.EF.News
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                    <li><i class="fa fa-users"></i>Quản lý bài đăng</li>
                    <li>Chi tiết</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="col-sm-4">
                            <h2><strong>Chi tiết bài đăng</strong></h2>
                        </div>
                        <div class="button-ds">
                            <a href="@Url.Action("Index","News")" class="btn btn-success btn-sm">Quay lại</a>
                        </div>
                    </header>
                    <div class="panel-body">
                        <div class="form">

                            <div class="form-group col-lg-6">
                                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    <span>@Model.Name</span>
                                </div>
                            </div>

                            <div class="form-group col-lg-6">
                                @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    <span>@Model.Price</span>
                                </div>
                            </div>

                            <div class="form-group col-lg-6">
                                @Html.LabelFor(model => model.Product.Name, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    <span>@Model.Product.Name</span>
                                </div>
                            </div>

                            <div class="form-group col-lg-6">
                                @Html.LabelFor(model => model.City.Name, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    <span>@Model.City.Name</span>
                                </div>
                            </div>

                            <div class="form-group col-lg-12">
                                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <p>@Model.Description</p>
                                </div>
                            </div>

                            <div class="form-group col-lg-12">
                                @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <img src="~/Uploads/@Html.ValueFor(model => model.FirstImage)" style="width:200px;height:200px;"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

