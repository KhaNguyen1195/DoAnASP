@model Model.EF.News

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index1.html">Trang chủ</a></li>
                    <li><i class="fa fa-users"></i>Quản lý bài đăngc</li>
                    <li>Thêm mới</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading"><h2><strong>Nhập thông tin bài đăng</strong></h2></header>
                    <div class="panel-body">
                        <div class="form">
                            @using (Html.BeginForm("Create", "News", FormMethod.Post, new { @class = "form-group form-validate" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên loại danh mục" })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group col-lg-12">
                                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                    <script type="text/javascript">
                                        CKEDITOR.replace("Description");
                                    </script>
                                </div>

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.Image, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(model => model.Image, new { @class = "form-control", @autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                    </div>
                                    @*<div><input type="button" id="Browse" value="...."/></div>
                                    <script>
                                        $("#Browse").click(function () {
                                            var finder = new CKFinder();
                                            finder.selectActionFuntion = function (fileUrl) {
                                                // lấy file ảnh cuối cùng
                                                //fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
                                                $("#Image").val(fileUrl);
                                            };
                                            finder.popup();
                                        });
                                    </script>*@
                                </div>

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.Price, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.ProductID, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.DropDownListFor(model => model.ProductID, null, new { @class = "form-control", @autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.CityID, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.DropDownListFor(model => model.CityID, null, new { @class = "form-control", @autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group col-lg-6">
                                    @Html.LabelFor(model => model.Status, new { @class = "control-label col-lg-4" })
                                    <div class="col-lg-8">
                                        @Html.CheckBoxFor(model => model.Status, new { @class = "checkbox form-control", @style = "width:20px;" })
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Tạo mới" class="btn btn-primary" />
                                        <button type="reset" class="btn btn-default">Làm mới</button>
                                        <a href="@Url.Action("Index","News")" class="btn btn-success" type="button">Quay lại</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
