
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>Admin Website Rao Vặt</title>
    <script src="~/Areas/Admin/Content/ckeditor/ckeditor.js"></script>
    @*<script src="~/Areas/Admin/Content/ckfinder/ckfinder.js"></script>*@
    <!-- Bootstrap CSS -->
    <link href="~/Areas/Admin/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Areas/Admin/Content/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Areas/Admin/Content/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Areas/Admin/Content/css/widgets.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/style-responsive.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/jquery-ui-1.10.4.min.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
      <script src="js/lte-ie7.js"></script>
    <![endif]-->
</head>

<body>
    <!-- container section start -->
    <section id="container" class="">


        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Thu gọn menu" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a href="@Url.Action("Index","Home")" class="logo">Quản trị <span class="lite">Hệ thống</span></a>
            <!--logo end-->

            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="profile-ava">
                                <img alt="" src="~/Areas/Admin/Content/img/avatar1_small.jpg">
                            </span>
                            @{
                                var session = (UserLogin)Session[DoAnRaoVat.Common.CommonConstants.USER_SESSION];
                            }
                            @if (session != null)
                            {
                                <span class="username">
                                    @session.UserName
                                </span>
                                        <b class="caret"></b>
                            }
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li class="eborder-top">
                                <a href="#"><i class="icon_profile"></i> Thông tin cá nhân</a>
                            </li>
                            <li>@Html.ActionLink("Thoát", "Logout", "Login")</li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="active">
                        <a class="" href="@Url.Action("Index","Home")">
                            <i class="icon_house_alt"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_group"></i>
                            <span>Quản lý hệ thống</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="@Url.Action("Index","User")"><span>Quản lý người dùng</span></a></li>
                            <li><a class="" href=""><span>Quản lý nhóm người dùng</span></a></li>
                            <li><a class="" href=""><span>Phân quyền sử dụng</span></a></li>
                        </ul>
                    </li>

                    <li>
                        <a class="" href="@Url.Action("Index","City")">
                            <i class="icon_map_alt"></i>
                            <span>Quản lý khu vực</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_document_alt"></i>
                            <span>Quản lý danh mục</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="@Url.Action("Index","Category")">Danh mục</a></li>
                            <li><a class="" href="@Url.Action("Index","Product")">Loại danh mục</a></li>
                        </ul>
                    </li>

                    <li>
                        <a class="" href="@Url.Action("Index","News")">
                            <i class="icon_map_alt"></i>
                            <span>Quản lý bài đăng</span>
                        </a>
                    </li>

                    <li>
                        <a class="" href="@Url.Action("Index","FeedBack")">
                            <i class="icon_comment_alt"></i>
                            <span>Phản hồi ý kiến</span>
                        </a>
                    </li>

                    

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
            @RenderBody()
        <!--main content end-->
    </section>
    <!-- container section start -->
    <!-- javascripts -->
    @*<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@
    <script src="~/Areas/Admin/Content/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Areas/Admin/Content/js/jquery.js"></script>
    <script src="~/Areas/Admin/Content/js/jquery-ui-1.10.4.min.js"></script>
    <script src="~/Areas/Admin/Content/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Content/js/jquery-ui-1.9.2.custom.min.js"></script>
    <!-- bootstrap -->
    <script src="~/Areas/Admin/Content/js/bootstrap.min.js"></script>

    <!-- custom script for this page-->
    <script src="~/Areas/Admin/Content/js/jquery.autosize.min.js"></script>
    <script src="~/Areas/Admin/Content/js/jquery.placeholder.min.js"></script>
    <script src="~/Areas/Admin/Content/js/morris.min.js"></script>
    <script src="~/Areas/Admin/Content/js/jquery.slimscroll.min.js"></script>

    <!-- nice scroll -->
    <script src="~/Areas/Admin/Content/js/jquery.scrollTo.min.js"></script>
    <script src="~/Areas/Admin/Content/js/jquery.nicescroll.js" type="text/javascript"></script>
    <!--custome script for all page-->
    <script src="~/Areas/Admin/Content/js/scripts.js"></script>
</body>

</html>
