@model Model.EF.News

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid_3 grid_5">
    <h3 class="head-top">Chi tiết bài đăng của bạn</h3>
    <div class="but_list">
        <div class="col-md-12 page_1">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Tiêu đề</label>
                    <div class="col-sm-8 text-detail">
                        <span>@Model.Name</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Hình ảnh</label>
                    <div class="col-sm-8 text-detail">
                        <span><img src="~/Uploads/@Model.FirstImage" /></span>
                    </div>
                </div>


                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Mô tả</label>
                    <div class="col-sm-8 text-detail">
                        <span>@Model.Description</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Giá</label>
                    <div class="col-sm-8 text-detail">
                        <span>@Model.Price</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Khu vực</label>
                    <div class="col-sm-8 text-detail">
                        <span>@Model.City.Name</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Ngày đăng</label>
                    <div class="col-sm-8 text-detail">
                        <span>@Model.CreatedDate</span>
                    </div>
                </div>

            </form>
        </div>

        <div class="clearfix"> </div>
    </div>
</div>


